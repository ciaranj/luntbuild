<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">
    <info>
        <appname>luntbuild</appname>
		<appversion>@appVersion@ - Demo</appversion>
        <authors>
            <author name="robinshine" email="robinshine@users.sourceforge.com"/>
            <author name="lubosp" email="lubosp@users.sourceforge.com"/>
            <author name="others - see luntbuild.sf.net" email="rshine@users.sourceforge.com"/>
        </authors>
        <url>http://luntbuild.sf.net/</url>
    </info>
    
    <variables>
        <variable name="appServerWebapps" value=""/>
    </variables>
    
    <!-- 
        The gui preferences indication.
    -->
    <guiprefs width="700" height="480" resizable="yes"/>
    
    <!--  The locale section. -->
    <locale>
        <langpack iso3="eng"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="license.txt"/>
        <res id="InfoPanel.info" src="release_notes.txt"/>
        <res id="userInputSpec.xml" src="../demo/scripts/userInputSpec.xml"/>
        <res id="ProcessPanel.Spec.xml" src="../demo/scripts/processPanelSpec.xml"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="UserInputPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <!-- <panel classname="ProcessPanel"/> -->
        <panel classname="SimpleFinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
    -->
    <packs>
		<pack name="Initialization" required="yes">
			<description>Lunbuild initialization files - required</description>
			<singlefile src="scripts/initialize.bat" target="$INSTALL_PATH/initialize.bat" override="true" os="windows"/>
			<parsable targetfile="$INSTALL_PATH/initialize.bat" os="windows"/>
			<singlefile src="scripts/initialize.sh" target="$INSTALL_PATH/initialize.sh" override="true" os="unix"/>
			<parsable targetfile="$INSTALL_PATH/initialize.sh" os="unix"/>
			<executable targetfile="$INSTALL_PATH/initialize.bat" stage="postinstall" os="windows"/>
			<executable targetfile="$INSTALL_PATH/initialize.sh" stage="postinstall" os="unix"/>
		</pack>
        <pack name="Base" required="yes">
            <description>Lunbuild base installation files - required</description>
            <fileset dir="." override="true" targetdir="$INSTALL_PATH">
                <exclude name="docs/**"/>
				<exclude name="scripts/**"/>
            </fileset>
            <singlefile src="scripts/configure.bat" target="$INSTALL_PATH/configure.bat" override="true" os="windows"/>
            <parsable targetfile="$INSTALL_PATH/configure.bat" os="windows"/>
            <singlefile src="scripts/configure.sh" target="$INSTALL_PATH/configure.sh" override="true" os="unix"/>
            <parsable targetfile="$INSTALL_PATH/configure.sh" os="unix"/>
            <parsable targetfile="$INSTALL_PATH/web/WEB-INF/web.xml"/>
            <parsable targetfile="$INSTALL_PATH/web/WEB-INF/applicationContext.xml"/>
            <executable targetfile="$INSTALL_PATH/configure.bat" stage="postinstall" os="windows"/>
            <executable targetfile="$INSTALL_PATH/configure.sh" stage="postinstall" os="unix"/>
            <singlefile src="scripts/run-demo.bat" target="$INSTALL_PATH/run-demo.bat" override="true" os="windows"/>
            <parsable targetfile="$INSTALL_PATH/run-demo.bat" os="windows"/>
            <singlefile src="scripts/run-demo.sh" target="$INSTALL_PATH/run-demo.sh" override="true" os="unix"/>
            <parsable targetfile="$INSTALL_PATH/run-demo.sh" os="unix"/>            
            <singlefile src="scripts/stop-demo.bat" target="$INSTALL_PATH/stop-demo.bat" override="true" os="windows"/>
            <parsable targetfile="$INSTALL_PATH/stop-demo.bat" os="windows"/>
            <singlefile src="scripts/stop-demo.sh" target="$INSTALL_PATH/stop-demo.sh" override="true" os="unix"/>
            <parsable targetfile="$INSTALL_PATH/stop-demo.sh" os="unix"/>            
        </pack>
        <pack name="Docs" required="no">
            <description>The Luntbuild documentation.</description>
            <file src="docs" override="true" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>

</installation>
