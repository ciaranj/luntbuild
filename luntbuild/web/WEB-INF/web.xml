<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>luntbuild</display-name>
	<description>A build automation and management tool</description>

	<servlet>
        <servlet-name>luntbuild</servlet-name>
		<servlet-class>com.luntsys.luntbuild.LuntBuildServlet</servlet-class>
		<init-param>
			<param-name>installDir</param-name>
			<param-value>D:/luntbuild</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping>
        <servlet-name>luntbuild</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>

	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

    <welcome-file-list>
       <welcome-file>index.html</welcome-file>
    </welcome-file-list>
	
</web-app>
