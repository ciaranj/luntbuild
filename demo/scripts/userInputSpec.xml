<?xml version="1.0" encoding="iso-8859-1" ?>
<userInput>
    <panel order="0">
        <field type="title" align="left" bold="yes" txt="Customize the web application." id="input.title"/>
        <field type="divider" align="left"/>
        <field type="space"/>
        <field type="text" variable="sessionTimeout">
            <spec txt="Session Timeout [min]:" id="input.timout" size="6" set="30"/>
        </field>
        <field type="space"/>
        <field type="text" variable="luntbuildPassword">
            <spec txt="Luntbuild Account Password:" id="input.lpassword" size="30" set="luntbuild"/>
        </field>
        <field type="space"/>
        <field type="divider" align="left"/>
        <field type="space"/>
        <field type="text" variable="serverPort">
            <spec txt="Server Port:" id="input.port" size="30" set="9090"/>
        </field>
        <field type="space"/>
        <field type="text" variable="serverStopPort">
            <spec txt="Server Stop Port:" id="input.stop.port" size="30" set="9091"/>
        </field>
        <field type="space"/>
        <field type="divider" align="left"/>
        <field type="space"/>
        <field type="staticText" align="center" txt="Click Next button to install and start demo!" id="start.text"/>
    </panel>
</userInput>
